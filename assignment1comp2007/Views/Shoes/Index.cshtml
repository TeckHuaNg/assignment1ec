@model IEnumerable<assignment1comp2007.Models.Shoe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @if (User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BrandId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SizeUS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Company.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShoeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SizeUS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            <img src="@item.ImageUrl" alt="Image Url" class="img-responsive" width="250" height="250"/>
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ProductId })
            @if (User.Identity.IsAuthenticated)
            {
                <p>
                    |@Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) 
                    |@Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
                </p>
            }
        </td>
    </tr>
}

</table>
